---
/**
 * Trust Badges Component
 *
 * Displays certification badges and trust signals.
 * Replace placeholder logos with actual certification images.
 */

interface Props {
  variant?: 'full' | 'compact' | 'inline';
}

const { variant = 'full' } = Astro.props;
---

{variant === 'full' && (
  <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm">
    <h3 class="text-center text-gray-500 text-sm font-medium uppercase tracking-wide mb-6">
      Trusted by 500,000+ Homeowners
    </h3>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center">
      <!-- BBB Accredited -->
      <div class="flex flex-col items-center gap-2 group">
        <div class="w-16 h-16 bg-blue-50 rounded-xl flex items-center justify-center group-hover:bg-blue-100 transition-colors">
          <svg class="w-10 h-10 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <span class="text-xs font-medium text-gray-600 text-center">BBB A+ Rating</span>
      </div>

      <!-- NABCEP Certified -->
      <div class="flex flex-col items-center gap-2 group">
        <div class="w-16 h-16 bg-solar-50 rounded-xl flex items-center justify-center group-hover:bg-solar-100 transition-colors">
          <svg class="w-10 h-10 text-solar-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
          </svg>
        </div>
        <span class="text-xs font-medium text-gray-600 text-center">NABCEP Certified</span>
      </div>

      <!-- Licensed & Insured -->
      <div class="flex flex-col items-center gap-2 group">
        <div class="w-16 h-16 bg-green-50 rounded-xl flex items-center justify-center group-hover:bg-green-100 transition-colors">
          <svg class="w-10 h-10 text-green-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <span class="text-xs font-medium text-gray-600 text-center">Licensed & Insured</span>
      </div>

      <!-- Satisfaction Guarantee -->
      <div class="flex flex-col items-center gap-2 group">
        <div class="w-16 h-16 bg-amber-50 rounded-xl flex items-center justify-center group-hover:bg-amber-100 transition-colors">
          <svg class="w-10 h-10 text-amber-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <span class="text-xs font-medium text-gray-600 text-center">100% Satisfaction</span>
      </div>
    </div>

    <!-- Additional Trust Info -->
    <div class="mt-8 pt-6 border-t border-gray-100">
      <div class="flex flex-wrap justify-center items-center gap-6 text-sm text-gray-500">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-solar-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span>25-Year Warranty</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-solar-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>$0 Down Available</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-solar-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          <span>Local Installers</span>
        </div>
      </div>
    </div>
  </div>
)}

{variant === 'compact' && (
  <div class="flex flex-wrap justify-center items-center gap-6 py-4">
    <div class="flex items-center gap-2 text-gray-500 text-sm">
      <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      </svg>
      <span>BBB A+</span>
    </div>
    <div class="flex items-center gap-2 text-gray-500 text-sm">
      <svg class="w-5 h-5 text-solar-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
      </svg>
      <span>Certified</span>
    </div>
    <div class="flex items-center gap-2 text-gray-500 text-sm">
      <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      <span>Licensed</span>
    </div>
    <div class="flex items-center gap-2 text-gray-500 text-sm">
      <svg class="w-5 h-5 text-amber-500" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
      <span>Guaranteed</span>
    </div>
  </div>
)}

{variant === 'inline' && (
  <div class="inline-flex items-center gap-4 text-xs text-gray-400">
    <span class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
      </svg>
      Verified
    </span>
    <span class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"/>
      </svg>
      Secure
    </span>
  </div>
)}
