---
/**
 * Analytics Component
 *
 * Includes Google Analytics 4 and Meta (Facebook) Pixel.
 * Replace the placeholder IDs with your actual tracking IDs.
 *
 * Environment Variables (recommended):
 * - PUBLIC_GA_MEASUREMENT_ID: Your GA4 Measurement ID (G-XXXXXXXXXX)
 * - PUBLIC_META_PIXEL_ID: Your Meta Pixel ID (numeric)
 */

// Get IDs from environment or use placeholders
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || 'G-XXXXXXXXXX';
const META_PIXEL_ID = import.meta.env.PUBLIC_META_PIXEL_ID || 'XXXXXXXXXXXXXXX';

// Only render in production or if IDs are set
const isProduction = import.meta.env.PROD;
const hasGAId = GA_MEASUREMENT_ID !== 'G-XXXXXXXXXX';
const hasMetaPixelId = META_PIXEL_ID !== 'XXXXXXXXXXXXXXX';
---

{/* Google Analytics 4 */}
{(isProduction || hasGAId) && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`}></script>
    <script define:vars={{ GA_MEASUREMENT_ID }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', GA_MEASUREMENT_ID, {
        page_path: window.location.pathname,
      });

      // Custom event helper function
      window.trackEvent = function(eventName, params) {
        gtag('event', eventName, params);
      };

      // Track form submissions
      window.trackLead = function(leadData) {
        gtag('event', 'generate_lead', {
          currency: 'USD',
          value: 50, // Estimated lead value
          ...leadData
        });
      };

      // Track calculator steps
      window.trackCalculatorStep = function(step, stepName) {
        gtag('event', 'calculator_step', {
          step_number: step,
          step_name: stepName
        });
      };
    </script>
  </>
)}

{/* Meta (Facebook) Pixel */}
{(isProduction || hasMetaPixelId) && (
  <>
    <script define:vars={{ META_PIXEL_ID }}>
      !function(f,b,e,v,n,t,s)
      {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
      n.callMethod.apply(n,arguments):n.queue.push(arguments)};
      if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
      n.queue=[];t=b.createElement(e);t.async=!0;
      t.src=v;s=b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t,s)}(window, document,'script',
      'https://connect.facebook.net/en_US/fbevents.js');

      fbq('init', META_PIXEL_ID);
      fbq('track', 'PageView');

      // Custom event helper
      window.trackMetaEvent = function(eventName, params) {
        fbq('track', eventName, params);
      };

      // Track leads for Meta
      window.trackMetaLead = function(leadData) {
        fbq('track', 'Lead', {
          content_name: 'Solar Quote Request',
          ...leadData
        });
      };
    </script>
    <noscript>
      <img height="1" width="1" style="display:none"
        src={`https://www.facebook.com/tr?id=${META_PIXEL_ID}&ev=PageView&noscript=1`}
      />
    </noscript>
  </>
)}

{/* Conversion tracking helper - available globally */}
<script>
  // Unified conversion tracking
  window.trackConversion = function(eventData) {
    const { eventName, value, ...rest } = eventData;

    // Track in GA4
    if (typeof gtag !== 'undefined') {
      gtag('event', eventName, { value, ...rest });
    }

    // Track in Meta
    if (typeof fbq !== 'undefined') {
      fbq('track', eventName, { value, ...rest });
    }

    // Log for debugging in development
    if (import.meta.env.DEV) {
      console.log('Conversion tracked:', { eventName, value, ...rest });
    }
  };
</script>
